<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#1A237E"
            android:padding="16dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xác nhận đặt vé"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginLeft="16dp"/>
        </LinearLayout>

        <!-- Movie Title and Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#F5F5F5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên phim: Doi Khong Nhu Mo"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá vé: 150.000 VND / 1 vé"
                android:textColor="#FF0000"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"/>

        <!-- Room Selection Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn phòng chiếu phim"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:padding="16dp"/>

        <!-- Room Selection Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="16dp">

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Phòng 1"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Phòng 2"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Phòng 3"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Phòng 4"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Phòng 5"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Phòng 6"/>
        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn giờ chiếu phim"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:padding="16dp"/>

        <!-- Time Selection Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="16dp"
            android:layout_marginTop="8dp">

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="7AM - 8AM"
                android:checked="true"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="8AM - 9AM"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="9AM - 10AM"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="10AM - 11AM"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="1PM - 2PM"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="2PM - 3PM"/>
        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn ghế ngồi"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Màn hình chính"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:padding="4dp"
            android:layout_marginTop="8dp"/>

        <!-- First row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button android:text="1" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.85" android:backgroundTint="#FF0000"/>
            <Button android:text="2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.85" android:backgroundTint="#4CAF50"/>
            <Button android:text="3" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.85" android:backgroundTint="#4CAF50"/>
            <Button android:text="4" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.85" android:backgroundTint="#4CAF50"/>
            <Button android:text="5" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.85" android:backgroundTint="#4CAF50"/>
            <Button android:text="6" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.85" android:backgroundTint="#4CAF50"/>
        </LinearLayout>

        <!-- Second row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button android:text="7" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0." android:backgroundTint="#4CAF50"/>
            <Button android:text="8" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.9" android:backgroundTint="#4CAF50"/>
            <Button android:text="9" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.9" android:backgroundTint="#4CAF50"/>
            <Button android:text="10" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.9" android:backgroundTint="#4CAF50"/>
            <Button android:text="11" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.9" android:backgroundTint="#4CAF50"/>
            <Button android:text="12" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.9" android:backgroundTint="#4CAF50"/>
        </LinearLayout>

        <!-- Third row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button android:text="13" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.9" android:backgroundTint="#4CAF50"/>
            <Button android:text="14" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.9" android:backgroundTint="#4CAF50"/>
            <Button android:text="15" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.9" android:backgroundTint="#4CAF50"/>
            <Button android:text="16" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.9" android:backgroundTint="#4CAF50"/>
            <Button android:text="17" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.9" android:backgroundTint="#4CAF50"/>
            <Button android:text="18" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.9" android:backgroundTint="#4CAF50"/>
        </LinearLayout>


        <!-- Food and Drink Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn đồ ăn / đồ uống"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <!-- Repeat this LinearLayout for each item -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coca Cola"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 000 VND"
                        android:textColor="#FF0000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hiện tại còn: 45"
                        android:textColor="#808080"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số lượng"
                        android:layout_gravity="center_horizontal"/>

                    <EditText
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textAlignment="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nuoc Suoi"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 000 VND"
                        android:textColor="#FF0000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hiện tại còn: 26"
                        android:textColor="#808080"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số lượng"
                        android:layout_gravity="center_horizontal"/>

                    <EditText
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textAlignment="center"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- Payment Method -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phương thức thanh toán"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"/>

        <!-- Confirmation Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XÁC NHẬN"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1A237E"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>